<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:component-scan base-package="org.hupo.psi.mi.psicquic.registry"/>

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <context:property-placeholder location="classpath:/META-INF/psicquic.properties"/>

    <!-- PSICQUIC Services -->
    <bean id="biogridService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="BioGrid"/>
        <property name="soapUrl" value="http://tyerslab.bio.ed.ac.uk:8080/psicquic-ws/webservices/psicquic"/>
        <property name="organizationUrl" value="http://www.thebiogrid.org/"/>
        <property name="restUrl" value="http://tyerslab.bio.ed.ac.uk:8080/psicquic-ws/webservices/current/search/interactor/brca2"/>
    </bean>
    <bean id="chemblService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="ChEMBL"/>
        <property name="soapUrl" value="http://www.ebi.ac.uk/Tools/webservices/psicquic/chembl/webservices/psicquic"/>
        <property name="organizationUrl" value="http://www.ebi.ac.uk/chembl"/>
        <property name="restUrl" value="http://www.ebi.ac.uk/Tools/webservices/psicquic/chembl/webservices/current/search/interactor/imatinib"/>
    </bean>
    <bean id="intactService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="IntAct"/>
        <property name="soapUrl" value="http://www.ebi.ac.uk/Tools/webservices/psicquic/intact/webservices/psicquic"/>
        <property name="organizationUrl" value="http://www.ebi.ac.uk/intact"/>
        <property name="restUrl" value="http://www.ebi.ac.uk/Tools/webservices/psicquic/intact/webservices/current/search/query/species:human?firstResult=0&amp;maxResults=100"/>
    </bean>
    <bean id="irefindexService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="iRefIndex"/>
        <property name="soapUrl" value="http://biotin.uio.no:8080/psicquic-ws/webservices/psicquic"/>
        <property name="organizationUrl" value="http://irefindex.uio.no/wiki/iRefIndex/"/>
        <property name="restUrl" value="http://biotin.uio.no:8080/psicquic-ws/webservices/current/search/query/A8K4B6"/>
    </bean>
    <bean id="matrixdbService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="MatrixDB"/>
        <property name="soapUrl" value="http://matrixdb.ibcp.fr:8080/webservices/psicquic"/>
        <property name="organizationUrl" value="http://matrixdb.ibcp.fr/"/>
        <property name="restUrl" value="http://matrixdb.ibcp.fr:8080/webservices/current/search/query/*"/>
    </bean>
    <bean id="mintService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="MINT"/>
        <property name="soapUrl" value="http://mint.bio.uniroma2.it/mint/psicquic/webservices/psicquic"/>
        <property name="organizationUrl" value="http://mint.bio.uniroma2.it/"/>
        <property name="restUrl" value="http://mint.bio.uniroma2.it/mint/psicquic/webservices/current/search/query/p53"/>
    </bean>
    <bean id="mpidbService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="MPIDB"/>
        <property name="soapUrl" value="http://www.jcvi.org/mpidb/servlet/webservices/psicquic"/>
        <property name="organizationUrl" value="http://www.jcvi.org/mpidb/"/>
    </bean>
    <bean id="stringService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="STRING"/>
        <property name="soapUrl" value="http://string-db.org/psicquic/ws"/>
        <property name="organizationUrl" value="http://string-db.org/"/>
        <property name="restricted" value="true"/>
        <property name="comments" value="'getByInteraction' is not implemented  - we don't have interaction IDs &lt;br/>'getByQuery' - coming soon.&lt;br/>Contact STRING for licensing info."/>
    </bean>
    <bean id="reactomeService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="Reactome"/>
        <property name="organizationUrl" value="http://www.reactome.org/"/>
        <property name="soapUrl" value="http://brie8.cshl.edu:8090/psicquic-ws-reactome/webservices/psicquic"/>
        <property name="restUrl" value="http://brie8.cshl.edu:8090/psicquic-ws-reactome/webservices/current/search/query/Q5VT97"/>
    </bean>
    <bean id="reactomeFiService" class="org.hupo.psi.mi.psicquic.registry.ServiceType">
        <property name="name" value="Reactome Functional Interactions"/>
        <property name="organizationUrl" value="http://www.reactome.org/"/>
        <property name="soapUrl" value="http://brie8.cshl.edu:8090/psicquic-ws-reactome-fi/webservices/psicquic"/>
        <property name="restUrl" value="http://brie8.cshl.edu:8090/psicquic-ws-reactome-fi/webservices/current/search/interactor/P00533"/>
    </bean>

    <!-- Configuration -->
    <bean name="psicquicConfig" class="org.hupo.psi.mi.psicquic.registry.config.PsicquicRegistryConfig">
        <property name="version" value="${psicquic.version}"/>
        <property name="registeredServices">
            <list>
                <ref bean="biogridService"/>
                <ref bean="chemblService"/>
                <ref bean="intactService"/>
                <ref bean="irefindexService"/>
                <ref bean="matrixdbService"/>
                <ref bean="mintService"/>
                <ref bean="mpidbService"/>
                <ref bean="reactomeService"/>
                <ref bean="reactomeFiService"/>
                <ref bean="stringService"/>
            </list>
        </property>
    </bean>

    <!-- freemarker config -->
    <bean id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="classpath:/META-INF/freemarker/"/>
    </bean>

    <!-- this bean must not be lazily initialized if the exporting is to happen -->
    <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter" lazy-init="false">
        <property name="beans">
            <map>
                <entry key="psicquic_registry:name=configuration" value-ref="psicquicConfig"/>
                <entry key="psicquic_registry:name=biogrid" value-ref="biogridService"/>
                <entry key="psicquic_registry:name=chembl" value-ref="chemblService"/>
                <entry key="psicquic_registry:name=intact" value-ref="intactService"/>
                <entry key="psicquic_registry:name=irefindex" value-ref="irefindexService"/>
                <entry key="psicquic_registry:name=matrixdb" value-ref="matrixdbService"/>
                <entry key="psicquic_registry:name=mint" value-ref="mintService"/>
                <entry key="psicquic_registry:name=mpidb" value-ref="mpidbService"/>
                <entry key="psicquic_registry:name=reactome" value-ref="reactomeService"/>
                <entry key="psicquic_registry:name=reactomefi" value-ref="reactomeFiService"/>
                <entry key="psicquic_registry:name=string" value-ref="stringService"/>
            </map>
        </property>
    </bean>

</beans>
